<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:icon="@drawable/ic_about"
        android:title="@string/these_settings_are_intended_fo"/>
    <CheckBoxPreference
        android:key="run_autostart"
        android:title="@string/run_autostart_title"
        android:defaultValue="false" />
    <Preference
        android:key="edit_autostart"
        android:title="@string/edit_autostart_title"/>
    <EditTextPreference
        android:summary="@string/custom_display_size_summary"
        android:inputType="number"
        android:key="custom_display_size"
        android:hint="@string/custom_display_size_hint"
        android:defaultValue=""
        android:title="@string/custom_display_size_title"/>
    <EditTextPreference
        android:summary="@string/scale_factor_summary"
        android:inputType="numberDecimal"
        android:key="scale_factor"
        android:hint="1.0"
        android:defaultValue="1.0"
        android:title="@string/scale_factor_title"/>
    <CheckBoxPreference
        android:key="allow_broadcasts"
        android:title="@string/allow_broadcasts_title"
        android:summary="@string/allow_broadcasts_summary"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:key="allow_app_freeze"
        android:title="@string/allow_app_freeze_title"
        android:summary="@string/allow_app_freeze_summary"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:key="allow_sysapp_uninstall"
        android:title="@string/allow_sysapp_uninstall_title"
        android:summary="@string/allow_sysapp_uninstall_summary"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:summary="@string/hide_nav_buttons_summary"
        android:key="hide_nav_buttons"
        android:title="@string/hide_nav_buttons_title"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:title="@string/hide_status_bar_title"
        android:key="hide_status_bar"
        android:summary="@string/hide_status_bar_summary"
        android:defaultValue="false" />
    <EditTextPreference
        android:title="@string/override_sb_height"
        android:key="status_bar_height"
        android:inputType="number"
        android:summary="Use a custom status bar height when calculating maximized window size"/>
    <Preference
        android:key="status_icon_blacklist"
        android:summary="Icons to hide from the status bar"
        android:title="@string/icon_blacklist"/>
    
    <CheckBoxPreference
        android:summary="@string/enable_soft_reboot_summary"
        android:key="enable_soft_reboot"
        android:title="@string/enable_soft_reboot_title"
        android:defaultValue="false" />
    <Preference
        android:key="move_to_system"
        android:summary="@string/move_to_system_summary"
        android:title="@string/move_to_system_title"/>
    
    <Preference
        android:key="soft_reboot"
        android:summary="@string/soft_reboot_summary"
        android:title="@string/soft_reboot_title"/>

</PreferenceScreen>
